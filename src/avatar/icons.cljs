(ns avatar.icons)

(defn icon-svg
  "Wrap a 100x100 icon in a consistent svg shell."
  [children]
  [:svg {:viewBox "0 0 100 100"
         :class "w2 h2"
         :aria-hidden true}
   children])

(defn paths-icon
  "Create an icon from raw SVG path/circle hiccup using a single color."
  [color & elements]
  (icon-svg
   (for [el elements]
     (let [[tag attrs] el]
       [tag (assoc attrs :fill color)]))))

